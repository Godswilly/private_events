<div class="flex items-center flex-col mt-10">
<h1 class="text-2xl mb-4">Events List</h1>


<div class="flex">
<div class="m-3">
    <div class="border border-gray-400 lg:border-gray-400 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
        <% @past_events.each do |event| %>
        <div class="mb-8">
            <div class="text-gray-900 font-bold text-xl mb-2">Past Event</div>
                <p class="text-gray-700 text-base"><%= event.description %></p>
            </div>
            <div class="flex items-center">
                <div class="text-sm">
                    <p class="text-gray-900 leading-none"><%= event.user.username %></p>
                    <p class="text-gray-600"><%= event.date %></p>
                </div>
            </div>
                <%= button_to 'Show Event', event, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold mt-3 py-2 px-4 rounded-full" %>
                <% end %>
    </div>
</div>

<div class="m-3">
    <div class="border border-gray-400 lg:border-gray-400 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
        <% @upcoming_events.each do |event| %>
        <div class="mb-8">
            <div class="text-gray-900 font-bold text-xl mb-2">Upcoming Event</div>
                <p class="text-gray-700 text-base"><%= event.description %></p>
            </div>
            <div class="flex items-center">
                <div class="text-sm">
                    <p class="text-gray-900 leading-none"><%= event.user.username %></p>
                    <p class="text-gray-600"><%= event.date %></p>
                </div>
            </div>
                <%= button_to 'Show Event', event, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold mt-3 py-2 px-4 rounded-full" %>
                <% end %>
    </div>
</div>
</div>
<%= button_to 'New Event', events_new_path, method: :get, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold mt-3 py-2 px-4 rounded-full" %>
</div>